@page "/pieedit"
@page "/pieedit/{PieId}"

@layout PieLayout

<h3>Create / edit a Pie</h3>

<h4>Two way data binding</h4>

<div>
    Pie name: 
    <input @bind="@Pie.Name" />
    Pie price: 
    <input @bind="@Pie.Price" />
</div>

<h4>Two way data binding on a different event</h4>

<div>
    Pie name:
    <input @bind-value="@Pie.Name" @bind-value:event="oninput" />
    Pie price:
    <input @bind-value="@Pie.Price" @bind-value:event="oninput" />
</div>

<div>
    <button @onclick="Button_Click">Click me</button>
</div>
